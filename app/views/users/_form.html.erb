    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", id: :user_email %>
  </div>

  <div class="field form-group">
    <%= form.label :points %>
    <%= form.number_field :points, class: "form-control", id: :user_points %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
